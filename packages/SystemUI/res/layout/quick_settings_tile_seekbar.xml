<com.android.systemui.statusbar.HorizontalPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/quicksettings_seekbars"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- Brightness -->
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/brightness_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/brightness_icon"
            android:src="@drawable/ic_sysbar_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp" />
            
        <CheckBox
            android:id="@+id/brightness_switch"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:button="@null" />

        <SeekBar
            android:id="@+id/brightness_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp" />
    </LinearLayout>

    <!-- Volume -->
    <LinearLayout
        android:id="@+id/volume_row"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/sound_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp" />
        
        <SeekBar
            android:id="@+id/volume_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp" />
    </LinearLayout>
    
</com.android.systemui.statusbar.HorizontalPager>
